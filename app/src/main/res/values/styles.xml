<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 다이얼로그 전체 스타일 -->
    <style name="LogoutDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="backgroundColor">@android:color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/BlueButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/BlueButton</item>
    </style>
    <!-- 파란색 텍스트 버튼 스타일 -->
    <style name="BlueButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="DrawerMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DrawerSubMenuItem" parent="DrawerMenuItem">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666</item>
    </style>
</resources>
