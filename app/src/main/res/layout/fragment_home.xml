<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- 상단 바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Caloric\nCoach"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lineSpacingExtra="2dp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/rightButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="오른쪽 버튼"
            android:src="@drawable/baseline_density_medium_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 전체 스크롤 가능한 콘텐츠 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <!-- 파이 차트와 남은 칼로리 -->
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textRemainingKcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남은 칼로리: 0 kcal"
                android:textSize="18sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

            <!-- 카드: 영양 정보 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <!-- KCAL -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="KCAL"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <ProgressBar
                            android:id="@+id/progressKcal"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/blue" />

                        <TextView
                            android:id="@+id/kcalText"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="0k"
                            android:textAlignment="viewEnd"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- 단백질 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="단백질"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <ProgressBar
                            android:id="@+id/progressProtein"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/blue" />

                        <TextView
                            android:id="@+id/proteinText"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="0g"
                            android:textAlignment="viewEnd"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- 탄수화물 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="탄수화물"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <ProgressBar
                            android:id="@+id/progressCarbs"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/blue" />

                        <TextView
                            android:id="@+id/carbsText"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="0g"
                            android:textAlignment="viewEnd"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- 지방 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="지방"
                            android:textColor="#000000"
                            android:textSize="16sp" />

                        <ProgressBar
                            android:id="@+id/progressFat"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="0dp"
                            android:layout_height="16dp"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:max="100"
                            android:progress="0"
                            android:progressTint="@color/blue" />

                        <TextView
                            android:id="@+id/fatText"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="0g"
                            android:textAlignment="viewEnd"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 버튼 및 추천 결과 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/white"
                android:layout_marginTop="16dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/overKcalTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초과 섭취 영양소"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/recommendationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="운동 추천 결과가 여기에 표시됩니다."
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
