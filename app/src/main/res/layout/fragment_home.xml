<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".HomeFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/logoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="Caloric\nCoach"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:lineSpacingExtra="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageButton
                    android:id="@+id/rightButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="오른쪽 버튼"
                    android:src="@drawable/baseline_menu_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintTop_toBottomOf="@id/top_bar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="360dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center_horizontal"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="1dp">

                        <TextView
                            android:id="@+id/textRemainingKcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="남은 칼로리: 0 kcal"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:fontFamily="@font/pretendard_semibold"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="8dp"
                        app:cardCornerRadius="20dp"
                        android:layout_gravity="center_horizontal"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/summaryTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="오늘 섭취량"
                                android:layout_gravity="left"
                                android:textColor="@color/dark_gray"
                                android:textSize="16sp"
                                android:layout_marginBottom="12dp"
                                android:fontFamily="@font/pretendard_semibold"/>

                            <!-- 단백질 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="단백질"
                                    android:fontFamily="@font/pretendard_medium"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <ProgressBar
                                    android:id="@+id/progressProtein"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_weight="1"
                                    android:max="100"
                                    android:progress="0"
                                    android:progressTint="@color/blue" />

                                <TextView
                                    android:id="@+id/proteinText"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="0 g"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:textAlignment="viewEnd"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <!-- 탄수화물 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="탄수화물"
                                    android:fontFamily="@font/pretendard_medium"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <ProgressBar
                                    android:id="@+id/progressCarbs"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_weight="1"
                                    android:max="100"
                                    android:progress="0"
                                    android:progressTint="@color/blue" />

                                <TextView
                                    android:id="@+id/carbsText"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="0 g"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:textAlignment="viewEnd"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <!-- 지방 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="지방"
                                    android:fontFamily="@font/pretendard_medium"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <ProgressBar
                                    android:id="@+id/progressFat"
                                    style="@android:style/Widget.ProgressBar.Horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="16dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:layout_weight="1"
                                    android:max="100"
                                    android:progress="0"
                                    android:progressTint="@color/blue" />

                                <TextView
                                    android:id="@+id/fatText"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="0 g"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:textAlignment="viewEnd"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="371dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="24dp"
                        android:padding="8dp"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:weightSum="2">


                        <!-- 초과 섭취량 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="1dp"
                            android:layout_marginEnd="12dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="10sp"
                                android:layout_marginEnd="10sp"
                                android:padding="20dp">

                                <!-- 제목 -->
                                <TextView
                                    android:id="@+id/summaryOverTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="초과 섭취량"
                                    android:layout_gravity="left"
                                    android:textColor="@color/dark_gray"
                                    android:textSize="16sp"
                                    android:layout_marginBottom="15dp"
                                    android:fontFamily="@font/pretendard_semibold"/>

                                <!-- 각 항목 (칼로리, 단백질, 탄수화물, 지방) -->
                                <!-- 칼로리 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="칼로리"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/pretendard_medium"/>

                                    <TextView
                                        android:id="@+id/overKcalTextView"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:text="0 k"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/pretendard_semibold"/>
                                </LinearLayout>

                                <!-- 단백질 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="단백질"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/pretendard_medium"/>

                                    <TextView
                                        android:id="@+id/overProteinTextView"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:text="0 g"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/pretendard_semibold"/>
                                </LinearLayout>

                                <!-- 탄수화물 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="탄수화물"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/pretendard_medium"/>

                                    <TextView
                                        android:id="@+id/overCarbsTextView"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:text="0 g"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/pretendard_semibold"/>
                                </LinearLayout>

                                <!-- 지방 -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="지방"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/pretendard_medium"/>

                                    <TextView
                                        android:id="@+id/overFatTextView"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="end"
                                        android:text="0 g"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/pretendard_semibold"/>
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- 운동 추천 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="160dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="1dp"
                            android:layout_marginStart="4dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="10sp"
                                android:layout_marginEnd="10sp"
                                android:padding="20dp">

                                <TextView
                                    android:id="@+id/exerciseTitleTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="영양소 태우기"
                                    android:textSize="16sp"
                                    android:textColor="@color/dark_gray"
                                    android:layout_marginBottom="15dp"
                                    android:fontFamily="@font/pretendard_semibold" />

                                <TextView
                                    android:id="@+id/recommendationTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="초과된 영양소가\n없습니다"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/pretendard_medium" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>
