<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KcalFragment">

    <!-- 상단 바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Caloric\nCoach"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lineSpacingExtra="2dp"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/calendarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 월 이동 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/btnPrevMonth"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:contentDescription="이전 달"/>

            <TextView
                android:id="@+id/tvMonthYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="May 2025"
                android:textSize="18sp"
                android:gravity="center"/>

            <!-- 오른쪽 더미 공간으로 균형 맞춤 -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:importantForAccessibility="no" />
        </LinearLayout>

        <!-- 날짜 스크롤 뷰 -->
        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/datesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:gravity="center"/>
        </HorizontalScrollView>

        <!-- 오늘로 돌아가기 -->
        <Button
            android:id="@+id/btnToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘로 돌아가기"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <!-- 상세 정보 표시 -->
        <LinearLayout
            android:id="@+id/detailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:background="#EFEFEF"
            android:padding="16dp">

            <TextView
                android:id="@+id/detailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택된 날짜 상세 내용"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 영양 정보 카드 영역 -->
    <LinearLayout
        android:id="@+id/nutrient_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/calendarLayout">

        <TextView
            android:id="@+id/summaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 총 섭취량"
            android:layout_marginStart="14dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <!-- KCAL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="KCAL"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progressKcal"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/blue" />

                    <TextView
                        android:id="@+id/kcalText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="0k"
                        android:textAlignment="viewEnd"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- 단백질 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="단백질"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progressProtein"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/blue" />

                    <TextView
                        android:id="@+id/proteinText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="0g"
                        android:textAlignment="viewEnd"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- 탄수화물 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="탄수화물"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progressCarbs"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/blue" />

                    <TextView
                        android:id="@+id/carbsText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="0g"
                        android:textAlignment="viewEnd"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- 지방 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="지방"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progressFat"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@color/blue" />

                    <TextView
                        android:id="@+id/fatText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="0g"
                        android:textAlignment="viewEnd"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
