<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelfCheckActivity">

    <!-- 상단 바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Caloric\nCoach"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lineSpacingExtra="2dp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 하단 카드 -->
    <LinearLayout
        android:id="@+id/nutrient_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <TextView
            android:id="@+id/summaryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 총 섭취량"
            android:layout_marginStart="14dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFFFF"
            app:cardCornerRadius="32dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

                <!-- KCAL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="KCAL"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progressKcal"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="75"
                        android:progressTint="@color/blue" />

                    <TextView
                        android:id="@+id/kcalText"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:text="1,620g"
                        android:textAlignment="viewEnd"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- 단백질 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="단백질"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progressProtein"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="65"
                        android:progressTint="@color/blue" />

                    <TextView
                        android:id="@+id/proteinText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="95g"
                        android:textAlignment="viewEnd"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- 탄수화물 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="탄수화물"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progressCarbs"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="80"
                        android:progressTint="@color/blue" />

                    <TextView
                        android:id="@+id/carbsText"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="230g"
                        android:textAlignment="viewEnd"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- 지방 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="지방"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/progressFat"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/blue" />

                    <TextView
                        android:id="@+id/fatText"
                        android:layout_width="60dp"
                        android:layout_height="22dp"
                        android:text="70g"
                        android:textAlignment="viewEnd"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
