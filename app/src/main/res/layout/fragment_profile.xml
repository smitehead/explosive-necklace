<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- 상단 바 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/logoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Caloric\nCoach"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lineSpacingExtra="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <!-- 원래 nutrient_area를 ScrollView 안에 그대로 넣기 -->
        <LinearLayout
            android:id="@+id/nutrient_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:background="@drawable/circle_shape"
                    android:src="@drawable/sample_profile"/>

                <!-- 닉네임 -->

                <!-- 내 정보 수정 버튼 -->
                <TextView
                    android:id="@+id/nicknameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:fontFamily="@font/pretendard_semibold"
                    android:hint="로그인이 필요합니다"
                    android:textColor="#111111"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btn_change_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="내 정보 수정"
                    android:textColor="@color/dark_gray"
                    android:textSize="13sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/profileInfoCard"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/dashboardTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="프로필 정보"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:fontFamily="@font/pretendard_bold"
                        android:layout_marginBottom="12dp" />

                    <!-- 성별/나이/체중/키 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- 성별 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/sexValue"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:text="-"
                                    android:fontFamily="@font/pretendard_bold"
                                    android:textSize="16sp"
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    android:background="@drawable/circle_border" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="성별"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:textSize="14sp"
                                    android:layout_marginTop="4dp"
                                    android:textColor="#767676" />
                            </LinearLayout>

                            <!-- 나이 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/yearValue"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:text="-"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/pretendard_bold"
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    android:background="@drawable/circle_border" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:text="나이"
                                    android:textColor="#767676"
                                    android:textSize="14sp" />
                            </LinearLayout>

                            <!-- 체중 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/weightValue"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:text="-"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    android:background="@drawable/circle_border" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="체중"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:textSize="14sp"
                                    android:layout_marginTop="4dp"
                                    android:textColor="#767676" />
                            </LinearLayout>

                            <!-- 키 -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/heightValue"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:text="-"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:textColor="@android:color/black"
                                    android:gravity="center"
                                    android:background="@drawable/circle_border" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="키"
                                    android:fontFamily="@font/pretendard_semibold"
                                    android:textSize="14sp"
                                    android:layout_marginTop="4dp"
                                    android:textColor="#767676" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bmiCard"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#21212F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- 타이틀 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="내 건강상태"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <!-- BMI 내용 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/bmiLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="BMI"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/bmiResultTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="로그인이 필요합니다"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/logoutCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/logoutTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="로그아웃"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
