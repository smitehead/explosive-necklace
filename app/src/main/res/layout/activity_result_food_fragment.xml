<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 입력받은 음식 JSON 확인용 -->
    <TextView
        android:id="@+id/receivedJsonTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Received JSON:" />

    <!-- 섭취량 입력 -->
    <EditText
        android:id="@+id/gramInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="섭취량 (g)을 입력하세요"
        android:inputType="number"
        android:background="@android:drawable/edit_text"
        android:padding="12dp" />

    <!-- 영양정보 출력 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/nutritionInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="8dp" />
    </ScrollView>

    <!-- 저장 버튼 -->
    <Button
        android:id="@+id/buttonConfirmSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오늘 식단으로 저장하기"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white" />
</LinearLayout>
